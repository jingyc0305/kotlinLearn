<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tl="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <!--tl:tl_divider_color="#1A000000"-->
    <!--tl:tl_divider_padding="13dp"-->
    <!--tl:tl_divider_width="1dp"-->
    <!--tl:tl_indicator_width_equal_title="true"-->
    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/project_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#EEEEEE"
        tl:tl_indicator_height="2.5dp"
        tl:tl_indicator_width="24dp"
        tl:tl_underline_gravity="BOTTOM"
        tl:tl_tab_padding="20dp"
        tl:tl_tab_space_equal="true"
        tl:tl_indicator_corner_radius="5dp"
        tl:tl_indicator_color="@color/colorPrimary"
        tl:tl_textSelectColor="@color/colorPrimary"
        tl:tl_textUnselectColor="#66000000">


    </com.flyco.tablayout.SlidingTabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/project_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <include
        android:id="@+id/error_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        layout="@layout/error_view"/>

</FrameLayout>
