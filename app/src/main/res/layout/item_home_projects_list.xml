<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/linearLayout"
                                    app:cardCornerRadius="5dp"
                                    android:layout_margin="8dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/home_project_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Title"
            app:layout_constraintHorizontal_weight="1"
            android:textAlignment="viewStart"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/home_project_img"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/home_project_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="author"
            android:textAlignment="viewStart"
            app:layout_constraintBottom_toBottomOf="@+id/home_project_date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.512"
            app:layout_constraintStart_toEndOf="@+id/home_project_date"
            app:layout_constraintTop_toTopOf="@+id/home_project_date"
            app:layout_constraintVertical_bias="0.0"/>

        <TextView
            android:id="@+id/home_project_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="date"
            android:textAlignment="viewStart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/home_project_img"
            app:layout_constraintTop_toBottomOf="@+id/home_project_descripe"/>

        <ImageView
            android:id="@+id/home_project_img"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            app:layout_constraintWidth_percent="0.3"
            app:layout_constraintDimensionRatio="W,16,9"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.115"
            app:srcCompat="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/home_project_descripe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="discripe"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/home_project_img"
            app:layout_constraintTop_toBottomOf="@+id/home_project_title"/>
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>

